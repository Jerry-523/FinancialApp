<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/saldoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo Total: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/totalReceitaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Receita: 0"
        android:textSize="18sp"
        android:textColor="#4CAF50" />

    <TextView
        android:id="@+id/totalDespesaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Despesa: 0"
        android:textSize="18sp"
        android:textColor="#F44336" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/addReceitaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="Adicionar Receita" />

    <Button
        android:id="@+id/addDespesaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:text="Adicionar Despesa" />

    <Button
        android:id="@+id/ReadTrxBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="Ver Transações" />
</LinearLayout>
